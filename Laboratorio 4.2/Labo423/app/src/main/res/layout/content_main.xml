<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.carlos.labo423.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/paginaweb"
        android:id="@+id/btnPW"
        android:background="#3ed145"
        android:textSize="25dp"
        android:width="150dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/telefono"
        android:id="@+id/btnmarcaTel"
        android:background="#3ed145"
        android:textSize="25dp"
        android:width="150dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/llamada"
        android:id="@+id/btnLlamada"
        android:background="#3ed145"
        android:textSize="25dp"
        android:width="150dp"
        android:layout_below="@+id/btnmarcaTel"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contactos"
        android:id="@+id/btnaniadir"
        android:background="#3ed145"
        android:textSize="25dp"
        android:width="150dp"
        android:layout_below="@+id/btnLlamada"
        android:layout_alignStart="@+id/btnmarcaTel" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alarma"
        android:id="@+id/btnalarma"
        android:background="#3ed145"
        android:textSize="25dp"
        android:width="150dp"
        android:layout_below="@+id/btnaniadir"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/correo"
        android:id="@+id/btnCorreo"
        android:background="#3ed145"
        android:textSize="25dp"
        android:width="150dp"
        android:layout_below="@+id/btnalarma"
        android:layout_alignStart="@+id/btnaniadir" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/camara"
        android:id="@+id/btnCamara"
        android:background="#3ed145"
        android:textSize="25dp"
        android:width="150dp"
        android:layout_below="@+id/btnCorreo"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/video"
        android:id="@+id/btnVideo"
        android:background="#3ed145"
        android:textSize="25dp"
        android:width="150dp"
        android:layout_below="@+id/btnCamara"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gps"
        android:id="@+id/btnGps"
        android:background="#3ed145"
        android:textSize="25dp"
        android:width="150dp"
        android:layout_below="@+id/btnVideo"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/texto"
        android:id="@+id/btnTexto"
        android:background="#3ed145"
        android:textSize="25dp"
        android:width="150dp"
        android:layout_below="@+id/btnGps"
        android:layout_alignStart="@+id/btnVideo" />


</RelativeLayout>
